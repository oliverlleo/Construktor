{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "accessControl": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "auth != null"
      }
    },
    "sharedWorkspaces": {
      "$workspaceId": {
        ".read": "root.child('accessControl').child(auth.uid).child($workspaceId).exists()",
        ".write": false
      }
    },
    "invitations": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["fromUserId", "toEmail", "resourceId"]
    }
  }
}